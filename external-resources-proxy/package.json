{
  "name": "external-resources-proxy",
  "version": "0.0.1",
  "private": true,
  "author": {
    "email": "devs@infoxchange.net.au",
    "name": "Infoxchange Developers",
    "url": "https://infoxchange.org"
  },
  "scripts": {
    "dev": "babel-watch --extensions .ts src/index.ts | pino-pretty",
    "build": "rm -rf 'dist' && babel 'src' --extensions '.ts' --copy-files -d 'dist'",
    "serve": "node dist/index.js",
    "test": "yarn jest",
    "test-jest": "jest",
    "lint": "yarn lint-eslint && yarn lint-typescript && yarn lint-hadolint && yarn lint-shellcheck",
    "lint-eslint": "eslint src .eslintrc.js tests",
    "lint-hadolint": "scripts/hadolint.sh Dockerfile",
    "lint-typescript": "tsc --noEmit",
    "lint-shellcheck": "find scripts src tests -iname '*.sh' | xargs -n10 scripts/shellcheck.sh",
    "shell": "bash"
  },
  "eslintIgnore": [
    "dist/"
  ],
  "dependencies": {
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.2",
    "http-errors": "^1.8.0",
    "pino-http": "^5.5.0",
    "pug": "^3.0.2",
    "statuses": "^2.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/pino-http": "^5.4.0",
    "@types/statuses": "^2.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-eslint": "^10.1",
    "babel-watch": "^7.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "pino-pretty": "^4.7.1",
    "supertest": "^6.1.3",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  }
}
