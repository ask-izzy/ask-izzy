#!/usr/bin/env bash

# Enable strict mode
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
IFS=$'\n\t'

DEBUG=${DEBUG:-}

# Print commands
PS4='$ $0:$LINENO: '
[ -n "$DEBUG" ] && set -x

PATH=$(npm bin):$PATH

# Build components index
target=./src/components.js
files=$( find src/components -maxdepth 1 -name '*.js' | grep -v '.stories.js' | sort )

cat << EOF > $target
/* @flow */
/* DO NOT EDIT - Generated by $0. */
/* eslint-disable max-len */

EOF

for f in $files
do
    base=$( basename "${f%.js}" )
    echo "import $base from \"./components/$base\";" >> $target
done

echo "" >> $target
echo "export default {" >> $target

for f in $files
do
    base=$( basename "${f%.js}" )
    echo "    $base," >> $target
done

echo "};" >> $target

# Build personalisation index
target=./src/constants/personalisation-pages/index.js
files=$( find src/constants/personalisation-pages -name '*.js' -not -name 'index.js' | sort )

cat << EOF > $target
/* @flow */
/* DO NOT EDIT - Generated by $0. */
/* eslint-disable max-len */

EOF

for f in $files
do
    base=$( basename "${f%.js}" )
    echo "import $base from \"./$base\";" >> $target
done

echo "" >> $target
echo "export default {" >> $target

for f in $files
do
    base=$( basename "${f%.js}" )
    echo "    $base," >> $target
done

echo "};" >> $target
