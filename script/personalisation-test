#!/usr/bin/env bash

# Enable strict mode
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
IFS=$'\n\t'

DEBUG=${DEBUG:-}

# Print commands
PS4='$ $0:$LINENO: '
[ -n "$DEBUG" ] && set -x

PATH=$(npm bin):$PATH
CI=${CI:-}
FAIL_FAST=${FAIL_FAST:-}

export NODE_ENV=production
export PORT=8010
export ENVIRONMENT=development

./script/test-setup

# Point the app at our mock ISS instance.
ISS_URL="http://localhost:5000/"
./script/recreate-dev-env-file

# we want this quite high as it makes debugging the tests easier.
INTERACTIVE_TIMEOUT="50000"
mocha \
    --require @babel/register \
    --require regenerator-runtime/runtime \
    --exit \
    $(([ -n "$CI" ] || [ -n "$FAIL_FAST" ]) && echo "--bail") \
    --timeout "$INTERACTIVE_TIMEOUT" \
    test/personalisation.js $@
